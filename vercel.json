{
    "version": 2,
    "functions": {
        "backend/server.js": {
            "runtime": "@vercel/node"
        }
    },
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/backend/server.js"
        },
        {
            "source": "/uploads/(.*)",
            "destination": "/backend/uploads/$1"
        },
        {
            "source": "/((?!api|uploads|assets|canvaskit|icons|.*\\.).*)",
            "destination": "/backend/public/index.html"
        },
        {
            "source": "/(.*)",
            "destination": "/backend/public/$1"
        }
    ]
}